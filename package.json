{
  "name": "ai-cybersecurity-platform",
  "version": "1.0.0",
  "description": "AI-Powered Cybersecurity Risk Simulation Platform by IRFAN AHMMED",
  "main": "backend/src/app.js",
  "author": "IRFAN AHMMED",
  "license": "MIT",
  "keywords": [
    "cybersecurity",
    "vulnerability-scanning",
    "ai-security",
    "penetration-testing",
    "risk-assessment",
    "security-automation"
  ],
  "scripts": {
    "start": "node backend/src/app.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"npm run ml:dev\"",
    "backend:dev": "nodemon backend/src/app.js",
    "frontend:dev": "cd frontend && npm start",
    "ml:dev": "cd ml-service && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run frontend:build",
    "frontend:build": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:ml",
    "test:backend": "jest --config=backend/jest.config.js",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:ml": "cd ml-service && python -m pytest",
    "test:integration": "jest --config=tests/integration/jest.config.js",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "eslint backend/src/**/*.js",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && cd frontend && npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && cd frontend && npm install && cd ../ml-service && pip install -r requirements.txt",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules ml-service/__pycache__ ml-service/.pytest_cache",
    "security-audit": "npm audit && cd frontend && npm audit",
    "coverage": "npm run test:backend -- --coverage && npm run test:frontend",
    "docs:generate": "jsdoc -c jsdoc.conf.json",
    "deploy:render": "echo 'Deploying to Render.com...' && git push origin main",
    "health-check": "node scripts/health-check.js",
    "backup": "node scripts/backup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.9.0",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.6.1",
    "pdfkit": "^0.14.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "jsdoc": "^4.0.2",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-cybersecurity-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-cybersecurity-platform/issues"
  },
  "homepage": "https://github.com/your-username/ai-cybersecurity-platform#readme"
}